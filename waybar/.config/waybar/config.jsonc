{
    "layer": "top",   
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 45,
    "modules-left": ["wlr/workspaces","hyprland/window"],
    "modules-center": ["mpris"],
    "modules-right": ["custom/pacman","network", "battery","clock", "cpu", "memory", "backlight","pulseaudio","pulseaudio#microphone", "tray"],
    "hyprland/window": {
        "format": "{}"
    },

    "wlr/workspaces": {
        "disable-scroll": true,
        "format": "{icon}",
        "format-icons": {"1":"ï‰©", "2" : "îˆµ", "3": "î•", "4": "ï„¡","5": "ï™", "6": "ïŠ", "7": "ïŸ¨","8": "ï§†","9":"ï­®"},
        "all-outputs": true,
        "on-click": "activate"
    },
    
    "tray": {
        "icon-size": 18,
        "spacing": 10
    },
    "cpu" : {
      "interval": 1,
      "format": "ï’¼  {}%"
    },
    "memory": {
      "interval": 1,
      "format": "î‰¦  {}%"
    },

    "clock": {
        "format": "{:ï€— %I:%M %p }",
        "format-alt":"{:ï³ %a, %b %e}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "format-icons": ["ï—", "ï—", "ï—Ÿ"],
        "on-scroll-up": "brightnessctl set 1%+",
        "on-scroll-down": "brightnessctl set 1%-",
        "min-length": 6
    },

    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon} {capacity}%",
        "format-charging": "ï‡¦ {capacity}%",
        "format-plugged": "ï‡¦ {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": ["ï–", "ï•¹", "ï•º", "ï•»", "ï•¼", "ï•½", "ï•¾", "ï•¿", "ï–€", "ï–", "ï•¸"]
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "tooltip": false,
        "format-muted": "ï€¦ Muted",
        "on-click": "pamixer -t",
        "on-scroll-up": "pamixer -i 5",
        "on-scroll-down": "pamixer -d 5",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "ï€¥",
            "hands-free": "ï€¥",
            "headset": "ï€¥",
            "phone": "ï‚•",
            "portable": "ï‚•",
            "car": "ï†¹",
            "default": ["ï€¦", "ï€§", "ï€¨"]
        }
    },

    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "ï¡« {volume}%",
        "format-source-muted": "ï¡¬ Muted",
        "on-click": "pamixer --default-source -t",
        "on-scroll-up": "pamixer --default-source -i 5",
        "on-scroll-down": "pamixer --default-source -d 5",
        "scroll-step": 5
    },
    
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "ï‡«  {signalStrength}%",
        "format-ethernet": "{ipaddr}/{cidr} ï–",
        "tooltip-format": "{essid} - {ifname} via {gwaddr} ï–",
        "format-linked": "{ifname} (No IP) ï–",
        "format-disconnected": "Disconnected âš ",
        "format-alt": "{ifname}:{essid} {ipaddr}/{cidr}"
    },

    "bluetooth": {
	    "format": "ïŠ” {status}",
	    "format-disabled": "", // an empty format will hide the module
	    "format-connected": "ïŠ” {num_connections}",
	    "tooltip-format": "{device_alias}",
	    "tooltip-format-connected": "ïŠ” {device_enumerate}",
	    "tooltip-format-enumerate-connected": "{device_alias}"
    },
     
    "mpris": {
      "title-len": 40,
      "dynamic-len": 35,
      "max-len": 55,
      "format": "{player_icon} {artist} : {title} - [{length}]",
      "format-paused": "{status_icon} {artist} : {title} - [{length}]",
      "player-icons": {
        "default": "â–¶",
        "mpv": "ğŸµ",
        "spotify": "ï†¼",
        "firefox": "ï‰©"
      },
      "status-icons": {
        "paused": "î«‘"
      },
      "ignored-players": ["vlc"]
    },
     
"mpd": {
	"format": "{stateIcon} {artist} -  {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S})",
	"format-disconnected": "Disconnected ï€",
	"format-stopped": "{stateIcon} {artist} -  {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S})",
	"interval": 2,
	"consume-icons": {
		"on": "ïƒ„ " // Icon shows only when "consume" is on
	},
	"repeat-icons": {
		"on": "ï€ "
	},
	"single-icons": {
		"on": "ï€1 "
	},
	"state-icons": {
		"paused": "ïŒ",
		"playing": "ï‹"
	},
	"tooltip-format": "MPD (connected)",
	"tooltip-format-disconnected": "MPD (disconnected)"
},

    
    "custom/pacman": {
      "format": "ï„¹ {}",
      "interval" : 100,
      "exec" : "~/.local/scripts/checkupdate",
      "exec-if" : "exit 0",
      "on-click": "alacritty -e paru"
    }

}


